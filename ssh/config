# for ssh proxy access to hostess
Host hostess hostess?
  HostName %h.mit.edu
  User tey

# for ssh/scp/rsync access to pdo and poc machines
Host pdo pdo? roci poc poc? pocdev? cali
  HostName %h.mit.edu
  ProxyCommand ssh -q -W %h:%p hostess2
  ForwardX11 yes
  ForwardX11Trusted yes
  ForwardAgent yes
  User tey

# for git access to the tetgit repositories
Host tetgit
  ProxyCommand ssh -q -W %h:%p hostess2
  ControlMaster auto
  ControlPath /tmp/.ssh-%u->%r@%h
  ControlPersist 15m
  User tey

# for https access via the SOCKS proxy
Host hostess8080
  HostName hostess2.mit.edu
  DynamicForward 8080
  User tey

Host tessscience tapeworm webtess
  HostName %h.mit.edu
  ForwardAgent yes
  User tey
